<Defs>

		<!-- Mechanized Helme -->

  <ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>Mechanized_Helm_Apparel</defName>
		<label>Mechanized Helm</label>
		<description>"The mechanized helmet much like its body armor counterpart is also extremely experimental and costly. However along with it's heavy protection it does offer some luxuries for its tech level such as a moderate degree of air filtration giving some protection from toxic gases and fallout. The overall complexity of this helm makes it cost an extra premium to make"</description>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>		
	<graphicData>
      <texPath>Things/Apparel/Mechanized_Helm_UI</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
		<WorkToMake>4000</WorkToMake>
		<MaxHitPoints>140</MaxHitPoints>
		<Mass>3.80</Mass>
		<ArmorRating_Sharp>0.90</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
		<ArmorRating_Heat>40</ArmorRating_Heat>
		<Insulation_Cold>7</Insulation_Cold>
		<Insulation_Heat>3</Insulation_Heat>
		<EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
		<ToxicSensitivity>-0.45</ToxicSensitivity>	
	</equippedStatOffsets>
    <costList>
		<Steel>15</Steel>
		<Gold>6</Gold>	
		<Cloth>3</Cloth>
		<ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>SteamPrototypes</researchPrerequisite>
		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
